<div class='card-sp'>
  <div class = 'profile-avatar_img border-t-radius' style = 'background: url(<%= @user.avatar %>) no-repeat; background-size: cover; background-color: white;'>
  </div>
  <div class = 'action-angle'>
    <% if @user == current_user %>
    <div class = 'btn-group'>
      <span class = 'sign-dots-menu profile-setting' data-toggle="dropdown">•••</span>
      <ul class="dropdown-menu blue-background-dropdown-menu" role="menu">
        <li>
          <%= link_to 'Мои настройки', profile_edit_path %>
          <%= link_to 'Выход', logout_path, data: { no_turbolink: true } %>
        </li>
      </ul>
    </div>
    <% end %>
  </div>
  <div class = 'profile-info'>
    <div class = 'profile-info_name'><%= @user.name %></div>
    <div class = 'profile-info_city'><%= @user.city.try(:name) %></div>
    <% if @user.description.present? %>
      <div class = 'profile-info_description'>
        <%= @user.description %>
      </div>
    <% end %>
    <% if @user.school.present? %>
      <%= link_to @user.site_url, target: :blank do %>
        <div class = 'profile-info_school'>
          <%= @user.school %>
        </div>
      <% end %>
    <% end %>
    <% if @user.vk_id.present? %>
      <div class = 'profile-info_vk'>
        <%= link_to "https://vk.com/#{@user.vk_id}", target: :blank do %>
          <img src= '/images/vk.png' /> <%= @user.vk_id %>
        <% end %>
      </div>
    <% end %>
    <% if @user.instagram_id.present? %>
      <div class = 'profile-info_insta'>
        <%= link_to "https://www.instagram.com/#{@user.instagram_id}", target: :blank do %>
          <img src= '/images/insta.png' /> <%= @user.instagram_id %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

